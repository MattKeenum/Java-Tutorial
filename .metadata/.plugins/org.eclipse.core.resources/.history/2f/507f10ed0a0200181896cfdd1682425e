package com.keenum.calcengine;

public class CalcEngine {

	public static void main(String[] args) {

		double val1 = 100;
		double val2 = 0;
		double result;
		char opCode = 'd';

		if (opCode == 'a') {
			result = val1 + val2;
		} else if (opCode == 's') {
			result = val1 - val2;
		} else if (opCode == 'd') {
			if (val2 != 0.0d) {
				result = val1 / val2;
			} else {
				System.out.println("Error - Can't divide by zero!");
				result = 0;
			}
		} else if (opCode == 'm') {
			result = val1 * val2;
		} else {
			System.out.println("Error - invalid opCode!");
			result = 0;
		}

		System.out.println(result);

	}

}
